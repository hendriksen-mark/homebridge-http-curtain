{
  "name": "homebridge-http-curtain",
  "displayName": "http-curtain",
  "version": "2.0.0",
  "description": "HTTP curtain or window blinds for Homebridge",
  "license": "ISC",
  "keywords": [
    "homebridge-plugin",
    "homebridge-accessory"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hendriksen-mark/homebridge-http-curtain"
  },
  "bugs": {
    "url": "https://github.com/hendriksen-mark/homebridge-http-curtain/issues"
  },
  "engines": {
    "node": ">=20.16.0",
    "homebridge": ">=1.8.0"
  },
  "author": {
    "name": "Mark Hendriksen"
  },
  "dependencies": {
    "homebridge-http-base": "^2.1.13"
  },
  "devDependencies": {
    "homebridge": "^2.0.0-beta.23",
    "semantic-release": "^24.0.0",
    "semantic-release-cli": "^5.4.6",
    "nodemon": "^3.1.7",
    "homebridge-config-ui-x":"^v5.0.0-beta.84" 
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "watch": "nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "main": "dist/src/index.js",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [],
    "exec": "npm run build && DEBUG= node ./node_modules/homebridge-config-ui-x/dist/bin/hb-service.js run --stdout -U ./test/hbConfig -T -D -I -P ./",
    "signal": "SIGTERM",
    "env": {
      "NODE_OPTIONS": "--trace-warnings"
    }
  }
}
