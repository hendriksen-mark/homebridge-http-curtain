{
  "name": "homebridge-http-curtain",
  "displayName": "http-curtain",
  "version": "2.0.0",
  "description": "HTTP curtain or window blinds for Homebridge",
  "license": "ISC",
  "keywords": [
    "homebridge-plugin",
    "homebridge-accessory",
    "curtain"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hendriksen-mark/homebridge-http-curtain"
  },
  "bugs": {
    "url": "https://github.com/hendriksen-mark/homebridge-http-curtain/issues"
  },
  "engines": {
    "node": ">=20.16.0",
    "homebridge": ">=1.8.0"
  },
  "author": {
    "name": "Mark Hendriksen"
  },
  "dependencies": {
    "axios": "^1.9.0"
  },
  "devDependencies": {
    "homebridge": "^2.0.0-beta.29",
    "semantic-release": "24.2.5",
    "semantic-release-cli": "5.4.6",
    "nodemon": "3.1.10",
    "homebridge-config-ui-x":"^v5.0.0-beta.86",
    "eslint": "^9.28.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-jest": "^28.13.0"
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "lint": "eslint --max-warnings=0",
    "lint:fix": "eslint --fix --max-warnings=0 .",
    "watch": "nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "main": "dist/src/index.js",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [],
    "exec": "npm run build && DEBUG= node ./node_modules/homebridge-config-ui-x/dist/bin/hb-service.js run --stdout -U ./test/hbConfig -T -D -I -P ./ | tee -a ./test/hbConfig/homebridge.log",
    "signal": "SIGTERM",
    "env": {
      "NODE_OPTIONS": "--trace-warnings"
    }
  }
}
